[DEFAULT]
platform=windows

[CONTROL-NODE]
servers={{ contrail_configuration.CONTROLLER_NODES }}

[DNS]
dns_client_port=53
servers={{ contrail_configuration.CONTROLLER_NODES }}:53

[VIRTUAL-HOST-INTERFACE]
name={{ adapters.vhost.interface_name }}
ip={{ adapters.vhost.ip }}/{{ adapters.vhost.ip_mask_length }}
{% if adapters.vhost.gateway is not none %}
gateway={{ adapters.vhost.gateway }}
{% endif %}
physical_interface={{ adapters.physical.interface_name }}
