version: '2'
services:
  web:
    image: "{{ container_registry }}/contrail-controller-webui-web:{{ contrail_version_tag }}"
    network_mode: "host"
    env_file: /etc/contrail/common_webui.env
    volumes:
      - /var/log/contrail:/var/log/contrail
      - /var/crashes/config:/var/crashes
    restart: always
    stdin_open: true
    tty: true
  job:
    image: "{{ container_registry }}/contrail-controller-webui-job:{{ contrail_version_tag }}"
    network_mode: "host"
    env_file: /etc/contrail/common_webui.env
    volumes:
      - /var/log/contrail:/var/log/contrail
      - /var/crashes/config:/var/crashes
    restart: always
    stdin_open: true
    tty: true
  redis:
    image: "redis:4.0.2"
    env_file: /etc/contrail/common_webui.env
    network_mode: "host"
    restart: always
