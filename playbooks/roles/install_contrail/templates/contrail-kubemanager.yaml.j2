version: '2'
services:
  kubemanager:
    image: "{{ container_registry }}/contrail-kubernetes-kube-manager:{{ contrail_version_tag }}"
    network_mode: host
    environment:
      - K8S_TOKEN={{ hostvars[k8s_master_name].kubemanagertoken }}
    env_file: /etc/contrail/common_kubemanager.env
    volumes:
      - /var/log/contrail:/var/log/contrail
{% if contrail_configuration.STATS_COLLECTOR_DESTINATION_PATH | length > 1 %}
      - {{ contrail_configuration.STATS_COLLECTOR_DESTINATION_PATH | dirname }}:{{ contrail_configuration.STATS_COLLECTOR_DESTINATION_PATH  | dirname }}
{% endif %}
    restart: always
    stdin_open: {{ contrail_configuration.STDIN_OPEN }}
    tty: {{ contrail_configuration.TTY }}
