version: '2'
services:
  nodemgr:
    image: "{{ container_registry }}/contrail-nodemgr:{{ contrail_version_tag }}"
    env_file: /etc/contrail/common.env
    environment:
      - NODE_TYPE=control
    network_mode: "host"
    volumes:
      - /etc/hosts:/etc/hosts
      - /var/log/contrail:/var/log/contrail
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/crashes/control:/var/crashes
    restart: always
    stdin_open: true
    tty: true
  control:
    image: "{{ container_registry }}/contrail-controller-control-control:{{ contrail_version_tag }}"
    network_mode: "host"
    env_file: "/etc/contrail/common_control_only_{{ location.key }}.env"
    volumes:
      - /etc/hosts:/etc/hosts
      - /var/log/contrail:/var/log/contrail
      - /var/crashes/control:/var/crashes
    restart: always
    stdin_open: true
    tty: true
