    depends_on:
      - network
    restart: on-failure
  topology:
    image: "{{ CONTAINER_REGISTRY }}/contrail-analytics-topology:{{ contrail_configuration.CONTRAIL_VERSION }}-{{ contrail_configuration.LINUX_DISTR }}-{{ contrail_configuration.OPENSTACK_VERSION }}"
    network_mode: "service:network"
