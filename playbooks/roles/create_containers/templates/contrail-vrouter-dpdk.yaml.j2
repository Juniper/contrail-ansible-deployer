version: '2'
services:
  node-init:
    image: "{{ container_registry }}/contrail-node-init:{{ contrail_version_tag }}"
    env_file: /etc/contrail/common_vrouter.env
    environment:
      - CONTRAIL_STATUS_IMAGE="{{ container_registry }}/contrail-status:{{ contrail_version_tag }}"
    privileged: true
    pid: host
    network_mode: host
    volumes:
      - /usr/bin:/host/usr/bin
  nodemgr:
    image: "{{ container_registry }}/contrail-nodemgr:{{ contrail_version_tag }}"
    env_file: /etc/contrail/common_vrouter.env
    environment:
      - NODE_TYPE=vrouter
    network_mode: host
    volumes:
      - /var/log/contrail:/var/log/contrail
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/crashes:/var/crashes
    restart: on-failure
    stdin_open: {{ stdin_open }}
    tty: {{ tty }}
    depends_on:
      - node-init
  vrouter-kernel-init-dpdk:
    image: "{{ container_registry }}/contrail-vrouter-kernel-init-dpdk:{{ contrail_version_tag }}"
    env_file: /etc/contrail/common_vrouter.env
    environment:
      - AGENT_MODE=dpdk
    network_mode: host
    privileged: true
    pid: host
    volumes:
      - /dev:/dev
      - /lib/modules:/lib/modules
      - /var/run:/var/run
      - /var/log/contrail:/var/log/contrail
  vrouter-agent-dpdk:
    image: "{{ container_registry }}/contrail-vrouter-agent-dpdk:{{ contrail_version_tag }}"
    env_file: /etc/contrail/common_vrouter.env
    environment:
      - AGENT_MODE=dpdk
    network_mode: host
    pid: host
    privileged: true
    volumes:
      - /dev:/dev
      - /lib/modules:/lib/modules
      - /var/run:/var/run
      - /var/log/contrail:/var/log/contrail
      - /var/crashes:/var/crashes
    restart: on-failure
    stdin_open: {{ stdin_open }}
    tty: {{ tty }}
    depends_on:
      - vrouter-kernel-init-dpdk
  vrouter-net-watchdog:
    image: "{{ container_registry }}/contrail-vrouter-net-watchdog:{{ contrail_version_tag }}"
    env_file: /etc/contrail/common_vrouter.env
    environment:
      - AGENT_MODE=dpdk
    network_mode: host
    privileged: true
    volumes:
      - /dev:/dev
      - /etc/sysconfig/network-scripts:/etc/sysconfig/network-scripts
      - /lib/modules:/lib/modules
      - /bin:/host/bin
      - /var/run:/var/run
      - /var/log/contrail:/var/log/contrail
    restart: on-failure
    stdin_open: {{ stdin_open }}
    tty: {{ tty }}
    depends_on:
      - vrouter-agent-dpdk
  vrouter-agent:
    image: "{{ container_registry }}/contrail-vrouter-agent:{{ contrail_version_tag }}"
    env_file: /etc/contrail/common_vrouter.env
    environment:
      - AGENT_MODE=dpdk
    network_mode: host
    privileged: true
    volumes:
      - /dev:/dev
      - /lib/modules:/lib/modules
      - /bin:/host/bin
      - /var/run:/var/run
      - /var/log/contrail:/var/log/contrail
      - /var/crashes:/var/crashes
    restart: on-failure
    stdin_open: {{ stdin_open }}
    tty: {{ tty }}
    depends_on:
      - vrouter-net-watchdog
